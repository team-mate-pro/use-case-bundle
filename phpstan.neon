includes:
    - phpstan-baseline.neon

parameters:
    level: max
    paths:
        - src
        - tests

    excludePaths:
        - tests/_Data
        - vendor

    # Ignore errors for test-specific patterns
    ignoreErrors:
        # Test data providers can have generic Result without specifying T
        - '#Method .+Test::testHasContent\(\) has parameter \$sut with generic class .+Result but does not specify its types#'

    # Additional strictness
    checkTooWideReturnTypesInProtectedAndPublicMethods: true
    checkUninitializedProperties: true
    checkDynamicProperties: true

    # Don't be overly strict with PHPDoc types in tests
    treatPhpDocTypesAsCertain: false
